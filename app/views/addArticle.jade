extend layout/layout
block css
	link(rel="stylesheet" href="/css/common.css")
	link(rel="stylesheet" href="/css/admin.css")
block js
	script(src="/js/common/Custom.js")
block content
	include layout/sideBar
	div.main
		form(method="POST" action="/").newArt
			input(name="title",type="text",placeholder="标题（必填）")
			input(name="author",type="text",placeholder="作者")
			input(name="tags",type="text",placeholder="标签，多个标签请用逗号分离")
			textarea(name="contents",placeholder="文章内容，支持Markdown格式")
			button(type="submit").btn.btn-submit 提交
			button(type="button").btn.btn-submit 预览